<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Pokedex</title>
</head>

    <body>  

        <nav>

            <ul>

                <li><img src="/img/pokebola.png" alt="pokebola"></li>
                <li> <a href="#cadastro"> Cadastro </a></li>
                <li><h1> <a href="/">  Pokedex </a></h1></li>
                <li> <a href="#cards"> Pokemons </a></li>
                <li><img src="/img/pokebola.png" alt="pokebola"></li>

            </ul>

        </nav>

        <header>

            <img src="/img/banner (2).jpg" alt="">

        </header>

        <main>

            <section id="cards">

                <h2>Lista dos Pokemons</h2>

                <% pokedex.forEach((pokemon) => { %>
    
                    <div class="card">
                        
                        <p>Id: <%= pokemon.id %> </p>
                        <img src="<%= pokemon.imagem %>" alt="">
                        <h3> <%= pokemon.nome %> </h3>
                        <p>Tipo: <%= pokemon.tipo %> </p>
                        <p class="descricao"> <%= pokemon.descricao %> </p>

                        <div id="btn">

                            <a id="editar" href="/detalhes/<%= pokemon.id %>">Editar</a>
                            <a id="deletar" href="/delete/<%= pokemon.id %>">Deletar</a>

                        </div>

                    </div>
        
                <% }); %>
    
            </section>

            <section id="cadastro">

                <img src="/img/pokedex.png" alt="">

                <div>

                    <% if(pokemon == undefined) { %>

                        <h2>Cadastre um novo Pokemon.</h2>
        
                        <form action="/add" method="POST">
        
                            <label for="nome">Nome:</label>
                            <input type="text" id="nome" name="nome">
        
                            <label for="descricao">Descrição:</label>
                            <input type="text" id="descricao" name="descricao">
        
                            <label for="tipo">Tipo:</label>
                            <input type="text" id="tipo" name="tipo">
        
                            <label for="imagem">Link da imagem:</label>
                            <input type="text" id="imagem" name="imagem">
                            
                            <button id="btnCadastrar" type="submit">Cadastrar</button>
        
                        </form>
        
                        <% } else { %>
        
                            <h2>Atualize o pokemon!</h2>
                        
                            <form action="/update/<%= pokemon.id %>" method="POST">
        
                                <label for="nome">Nome:</label>
                                <input type="text" id="nome" name="nome" value="<%= pokemon.nome %>">
        
                                <label for="descricao">Descrição:</label>
                                <input type="text" id="descricao" name="descricao" value="<%= pokemon.descricao %>">
        
                                <label for="tipo">Tipo:</label>
                                <input type="text" id="tipo" name="tipo" value="<%= pokemon.tipo %>">
        
                                <label for="imagem">Link da imagem:</label>
                                <input type="text" id="imagem" name="imagem" value="<%= pokemon.imagem %>">
                                
                                <button id="btnAtualizar" type="submit">Atualizar</button>
        
                            </form>
                            <% } %>
                       

                </div>

                
            </section>
            
        </main>

        <footer>
            <p>Todos os direitos reservados para <a target="_blank" href="https://www.instagram.com/mthiagoalves/">Thiago Alves</a> e <a target="_blank" href=""> Diego Freitas </a> ©</p>
            <p>Inpirado em <a target="_blank" href="https://www.pokemon.com/br/">Pokedex</a></p>
        </footer>

    </body>

</html>